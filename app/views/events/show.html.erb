<%= stylesheet_link_tag "events" %>

<div class="jumbotron">
  <h1><strong><%= @event.name %></strong></h1>
  <h4>Host: <%= @event.host.first_name %></h4>
  <h4>Location: <%= @event.city%>, <%=@event.state %></h4>
  <h4>Date: <%= @event.date.strftime("%B %d, %Y") %></h4>
<% if @event.users.exists? %>
  <h4>People attending: <%= @event.users.count %> </h4>
</div>

<div class="text-center ">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th class="text-center">Name</th>
        <th class="text-center">City</th>
        <th class="text-center">State</th>
      </tr>
    </thead>
    <tbody>
      <% @event.users.each do |e| %>
      <tr>
        <td><%= e.first_name %></td>
        <td><%= e.city %></td>
        <td><%= e.state %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if @comment.exists? %>
  <h5><strong>Discussions about this event</strong></h5>
    <div class="comment">
      <% @comment.each do |comment| %>
      <p>
    	   <%= comment.user.first_name %> says: <%= comment.content%>
      </p>
    </div>
    <% end %>
<% else %>
  <h4>Add the first comment to this event!</h4>
<% end %>
  <form class="form" action="/comments/<%= @event.id %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
    <div class="form-group">
      <label for="comment">Add Comment</label>
      <textarea name="content" class="form-control" rows="5"></textarea>
    </div>
    <button type="submit" class="btn btn-default">Add Comment</button>
  </form>

  <% else %>
    <em><h4>No one is currently attending this event!</h4></em>
  <% end %>
